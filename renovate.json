{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>NextFire/renovate-config",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone"
  ],
  "ignoreTests": true,
  "docker-compose": {
    "managerFilePatterns": [
      "/.*\\.compose\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "matchFileNames": [
        "media/compose.yaml"
      ],
      "matchPackageNames": [
        "rclone/rclone"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "lscr.io/linuxserver/{/,}**"
      ],
      "allowedVersions": "<10"
    },
    {
      "matchPackageNames": [
        "authelia/authelia"
      ],
      "allowedVersions": "<4.38"
    },
    {
      "matchPackageNames": [
        "flexget/flexget"
      ],
      "allowedVersions": "<3.12.4"
    }
  ]
}
